<% if @friend %>
  <h1>Friends#show</h1>
  <p>Find me in app/views/friends/show.html.erb</p>

  <%# Rendering a partial, passing the @friend instance variable to it as a
      local variable named "friend" %>
  <%= render partial: 'friend', locals: { friend: @friend } %>

  <%# Simple partial without local variables %>
  <%= render 'links' %>
<% elsif @message && !@message.blank? %>
  <h2>Invalid Friend Object!</h2>

  <p><%= @message %></p>
<% else %>
    <h2>An unexpected error has occurred.</h2>
<% end %>